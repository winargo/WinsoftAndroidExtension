<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.global.winsoftandroidextension.report.Reportpenjualan"
    android:id="@+id/rpenjualan">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#BBDEFB"
        android:id="@+id/llpenjualan"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Faktur"
            android:gravity="center"
            />
      <!--  <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tanggal"
            android:gravity="center"
            />-->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Sales"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:gravity="center"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:gravity="center"
            />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llpenjualan"
        android:id="@+id/lvpenjualan"
        android:layout_above="@+id/totalpenjualan" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/totalpenjualan"
        android:textSize="10pt"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
