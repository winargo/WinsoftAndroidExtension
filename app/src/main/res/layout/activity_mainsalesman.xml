<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.global.winsoftandroidextension.MainMenu.mainpenjualan"
    android:id="@+id/dbsell"
    android:background="#ffb4b4b4">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lltitle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Salesman"
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/lltitle"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lltitle"
        android:layout_marginTop="25sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dt1"
            android:focusable="false"
            android:text="class error"
            android:layout_gravity="left"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="S/D"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dt2"
            android:focusable="false"
            android:text="class error"
            android:layout_gravity="right"
            android:layout_alignParentStart="true" />
    </LinearLayout>
    <Spinner
        android:id="@+id/saleschoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginTop="20sp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20sp"
        android:background="#ff13a609"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/btnprint"
        android:text="Print"
        android:layout_below="@+id/saleschoice"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/pbpenj"
        android:layout_below="@+id/saleschoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/btnprint"
        android:layout_toEndOf="@+id/btnprint" />

</RelativeLayout>
