<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/wallet_holo_blue_light"
    >


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/number"/>

    <TextView
        android:id="@+id/number"
        android:gravity="center"
        android:layout_width="40sp"
        android:layout_height="35sp"
        android:textAlignment="center"
        android:text="no"/>
    <LinearLayout
        android:id="@+id/rkp2ll1"
        android:orientation="horizontal"
        android:layout_width="386px"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentRight="@+id/number"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/number">


        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:text="Sales"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/rkp2faktur"
            android:text="Nama Salesman"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rkp2ll2"
        android:layout_width="386px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rkp2ll1"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:padding="0dp"
        android:layout_toEndOf="@+id/number">

        <TextView
            android:id="@+id/rkp2subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Penjualan"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rkp2disc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Retur"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rkp2ppn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Omzet"
            android:gravity="center"
            android:textAlignment="center" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <ListView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvsalesmanrekapomset"
        android:layout_below="@+id/view3"
        android:layout_above="@+id/totalomzet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/totalomzet"
        android:textSize="10pt"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
